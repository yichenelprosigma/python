def es_primo(n):
    if n < 2:
        return False
    for i in range(2, int(n ** 0.5) + 1):
        if n % i == 0:
            return False
    return True

primos = [n for n in range(1, 101) if es_primo(n)]
print("Lista de números primos del 1 al 100:")
print(primos)
suma_primos = sum(primos)
print("\nSuma de todos los números primos:", suma_primos)
print("Número primo más pequeño:", min(primos))
print("Número primo más grande:", max(primos))
suma_menores_50 = sum([n for n in primos if n < 50])
print("Suma de los números primos menores de 50:", suma_menores_50)